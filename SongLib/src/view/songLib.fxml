<GridPane alignment="center" hgap="10" prefHeight="481.0" prefWidth="632.0" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SongLibController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <HBox alignment="center" prefHeight="452.0" prefWidth="582.0" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">

        <VBox alignment="CENTER_LEFT" spacing="5">

            <GridPane alignment="center" hgap="10" prefHeight="402.0" prefWidth="248.0" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <Label prefHeight="19.0" prefWidth="54.0" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextField fx:id="song" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="required" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Artist:" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextField fx:id="artist" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="required" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label prefHeight="19.0" prefWidth="64.0" text="Album:" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextField fx:id="album" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="optional" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3">
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextField fx:id="year" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="optional" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>

        <VBox alignment="center" prefHeight="457.0" prefWidth="66.0" spacing="10">
            <Button fx:id="add" text="Add" />
            <Button fx:id="edit" text="Edit" />
            <Button fx:id="delete" prefHeight="29.0" prefWidth="91.0" text="Delete" />
        </VBox>

        <VBox alignment="CENTER_RIGHT" spacing="5">
            <ListView fx:id="listView" prefHeight="281.0" prefWidth="250.0" />
            <Button fx:id="cancel" text="Cancel" />
        </VBox>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
