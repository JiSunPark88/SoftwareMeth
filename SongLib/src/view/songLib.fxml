<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="view.SongLibController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <HBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">

        <VBox alignment="CENTER_LEFT" spacing="5">

            <GridPane alignment="center" hgap="10" prefHeight="402.0" prefWidth="248.0" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <Label text="Song:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="song" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="required" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Artist:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="artist" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="required" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Album:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="album" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="optional" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="year" layoutX="196.0" layoutY="197.0" prefHeight="25.0" prefWidth="175.0" promptText="optional" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>

        <VBox alignment="center" spacing="10">
            <Button fx:id="add" text="Add" />
            <Button fx:id="edit" text="Edit" />
            <Button fx:id="delete" text="Delete" />
        </VBox>

        <VBox alignment="CENTER_RIGHT" spacing="5">
            <ListView fx:id="listView" />
            <Button fx:id="cancel" text="Cancel" />
        </VBox>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
